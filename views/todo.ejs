<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
      body {
        height: 100vh;
        background-color: #00033b;
        font-family: Poppins;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .container {
        background-color: white;
        height: 85%;
        width: 80%;
        padding: 30px;
        box-shadow: 1px 1px 5px gray;
        border-radius: 6px;
      }
      h2 {
        margin-top: 0;
        text-align: center;
      }
      #bt {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 40px;
        width: 150px;
        background-color: rgb(255, 69, 69);
        border: none;
        color: white;
        font-size: 15px;
        border-radius: 5px;
        cursor: pointer;
        gap: 8px;
        box-shadow: 1px 1px 5px gray;
      }
      .inp {
        margin-top: 5px;
        background-color: rgb(189, 189, 189);
        height: auto;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        display: none;
        border-radius: 5px;
        position: absolute;
      }
      .inp input {
        height: 40px;
        width: 640px;
        border-radius: 5px;
        border: none;
        padding-left: 10px;
        margin-bottom: 10px;
      }
      .inp button {
        height: 35px;
        width: 100px;
        border-radius: 5px;
        background-color: rgb(255, 69, 69);
        border: none;
        color: white;
        font-weight: bold;
        cursor: pointer;
      }
      .inp input:focus {
        outline: 2px solid rgb(255, 141, 27);
      }
      #can {
        background-color: rgb(83, 137, 192);
        position: absolute;
        left: 130px;
        bottom: 20px;
      }
      #work {
        height: 30px;
        padding: 20px;
        background-color: antiquewhite;
        border-radius: 5px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .scroll {
        overflow-y: scroll;
        height: 82%;
        margin-top: 20px;
      }
      #del {
        height: 10px;
        background-color: transparent;
        color: rgb(107, 107, 107);
        border: none;
        cursor: pointer;
        display: none;
        align-items: center;
      }
      #work:hover #del {
        display: flex;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>TODO's</h2>
      <div>
        <button id="bt" onclick="show()">
          <span>Add Task </span
          ><span class="material-symbols-outlined"> add_circle </span>
        </button>
      </div>
      <div class="inp">
        <form action="/" method="POST">
          <input
            type="text"
            name="task"
            placeholder="Enter Your Task"
            id="task"
          /><br />
          <button type="submit" onclick="add()">Add</button>
        </form>
        <button id="can" onclick="cancel()">Cancle</button>
      </div>
      <div class="scroll">
        <div class="works">
          <% list.map((val)=>{ %>
          <div id="work">
            <span><%= val.task %></span>
            <div id="delTask">
              <form action="/delet" method="POST">
                <input type="hidden" name="taskId" value="<%= val._id %>" />
                <button id="del">
                  <span class="material-symbols-outlined">
                    delete_forever
                  </span>
                </button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <script>
      function show() {
        document.querySelector(".inp").style = "display:flex";
      }
      function cancel() {
        document.querySelector(".inp").style = "display:none";
        document.getElementById("task").value = "";
      }
      function add() {
        document.querySelector(".inp").style = "display:none";
      }
    </script>
  </body>
</html>
